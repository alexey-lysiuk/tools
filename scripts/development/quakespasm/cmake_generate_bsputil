#!/bin/sh

set -o errexit

SCRIPT_DIR=$(cd "${0%/*}"; pwd)
SOURCE_DIR=${SCRIPT_DIR}/../../../game_tools/bsputil
BUILD_DIR=/Volumes/ramdisk/bsputil_build

mkdir -p "${BUILD_DIR}"
cd "${BUILD_DIR}"

/Volumes/Storage/Work/zdoom-macos-deps/prefix/bin/cmake -GXcode "${SOURCE_DIR}"
open bsputil.xcodeproj
